Host gerrit.{{.CicdNamespace}}*
        HostName gerrit.{{.CicdNamespace}}
        Port {{.SshPort}}
        User project-creator
        StrictHostKeyChecking no
        UserKnownHostsFile /dev/null
        IdentityFile {{.GerritKeyPath}}
        IdentitiesOnly yes
{{if or (eq .VcsIntegrationEnabled true) -}}
      Host {{.ProjectVcsHostname}}
        HostName {{.ProjectVcsHostname}}
        Port {{.VcsSshPort}}
        User git
        StrictHostKeyChecking no
        UserKnownHostsFile /dev/null
        IdentityFile {{.VcsKeyPath}}
        IdentitiesOnly yes
{{- end}}